<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WhereDidIPark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.WhereDidIPark" parent="Base.Theme.WhereDidIPark" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/my_splash_background</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a static drawable or an animated drawable.
            <item name="windowSplashScreenAnimatedIcon">@drawable/animated_icon</item>
            -->

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.MyApp</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <!-- Required for setting the splash screen background. -->
        <item name="android:windowSplashScreenBackground">@color/my_splash_background</item>
    </style>
</resources>